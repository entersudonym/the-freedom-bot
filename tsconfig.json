        "module": "CommonJS",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "dist",
        "sourceMap": false,
        "lib": ["ES2015"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules"]
}
